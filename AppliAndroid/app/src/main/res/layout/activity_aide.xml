<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fr.pierreyvesmingam.robotr2d2.AideActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retour"
        android:id="@+id/button6"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="retour" />

    <TextView
        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FAQ:"
        android:id="@+id/textView25"
        android:textColor="#444444"
        android:textSize="20dp"
        android:layout_below="@+id/button6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comment faire bouger le robot ?"
        android:id="@+id/textView26"
        android:textColor="#444444"
        android:textSize="15dp"
        android:layout_below="@+id/textView25"
        android:layout_toRightOf="@+id/textView25"
        android:layout_toEndOf="@+id/textView25" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Poser le doigt sur le joystick rouge et le déplacer"
        android:id="@+id/textView27"
        android:layout_below="@+id/textView26"
        android:layout_toRightOf="@+id/textView25" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Le Robot persiste à ne pas bouger, que faire ?"
        android:id="@+id/textView28"
        android:textColor="#444444"
        android:textSize="15dp"
        android:layout_below="@+id/textView27"
        android:layout_toRightOf="@+id/textView25" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Il faut s&apos;assurer d&apos;être connecté au réseau Wifi généré par le robot."
        android:id="@+id/textView29"
        android:layout_below="@+id/textView28"
        android:layout_toRightOf="@+id/textView25" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pourquoi le robot s&apos;arrête ?"
        android:id="@+id/textView30"
        android:textColor="#444444"
        android:textSize="15dp"
        android:layout_below="@+id/textView29"
        android:layout_toRightOf="@+id/textView25" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Si le niveau de batterie est jugé trop faible, le robot se met en sécurité et s&apos;éteint."
        android:id="@+id/textView31"
        android:layout_below="@+id/textView30"
        android:layout_toRightOf="@+id/textView25" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Un problème divers intervient dans le mauvais fonctionnement de mon application, que faire ?"
        android:id="@+id/textView32"
        android:textColor="#444444"
        android:textSize="15dp"
        android:layout_below="@+id/textView31"
        android:layout_toRightOf="@+id/textView25" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dans un premier temps, redémarrer l&apos;application, se reconnecter au réseaux Wifi et réessayer."
        android:id="@+id/textView33"
        android:layout_below="@+id/textView32"
        android:layout_toRightOf="@+id/textView25" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Si le problème perciste, contacter les personnes en charges de la maintenance de l&apos;application pour retourner le bug."
        android:id="@+id/textView34"
        android:layout_below="@+id/textView33"
        android:layout_toRightOf="@+id/textView25" />


</RelativeLayout>
